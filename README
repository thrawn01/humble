# -------------------------------------
# Install
# -------------------------------------

sudo aptitude install ctags python-setuptools python-dev \
                      build-essential git-core gitk \
                      libsqlite3-dev

sudo easy_install -U pip
sudo pip install -U virtualenv

pip install pysqlite


# -------------------------------------
# README
# -------------------------------------

# Run unit tests
nosetests

# With SQL Logging on
nosetests -l humble_sql

